<scene version="3.0.0">
    <default name="spp" value="128"/>
    <default name="resx" value="256"/>
    <default name="resy" value="256"/>

    <default name="max_depth" value="6"/>
    <default name="integrator" value="path"/>

    <integrator type='$integrator'>
        <integer name="max_depth" value="$max_depth"/>
    </integrator>

    <sensor type="perspective" id="sensor">
        <string name="fov_axis" value="smaller"/>
        <float name="near_clip" value="0.001"/>
        <float name="far_clip" value="100.0"/>
        <float name="focus_distance" value="1000"/>
        <float name="fov" value="30"/>
        <transform name="to_world">
            <lookat origin="0.1,  0,  0"
                    target="0,  0,  0"
                    up    ="0,  1,  0"/>
        </transform>
        <sampler type="independent">
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <integer name="width"  value="$resx"/>
            <integer name="height" value="$resy"/>
            <rfilter type="tent"/>
            <string name="pixel_format" value="rgb"/>
            <string name="component_format" value="float32"/>
        </film>
    </sensor>

    <!-- BSDFs -->

    <bsdf type="diffuse" id="gray">
        <rgb name="reflectance" value="0.85, 0.85, 0.85"/>
    </bsdf>

    <bsdf type="diffuse" id="white">
        <rgb name="reflectance" value="0.885809, 0.698859, 0.666422"/>
    </bsdf>

    <bsdf type="diffuse" id="green">
        <rgb name="reflectance" value="0.105421, 0.37798, 0.076425"/>
    </bsdf>

    <bsdf type="diffuse" id="red">
        <rgb name="reflectance" value="0.570068, 0.0430135, 0.0443706"/>
    </bsdf>

    <bsdf type="dielectric" id="glass"/>

    <bsdf type="conductor" id="mirror"/>

    <texture type="checkerboard" id="color_checkerboard">
        <rgb name="color0" value="1"/>
        <rgb name="color1" value="0"/>
        <transform name="to_uv">
            <scale x="5" y="5" />
        </transform>
    </texture>

    <!-- Light -->

    <!-- <emitter type="point">
        <point name="position" value="0.0, 0.0, 0.0"/>
        <rgb name="intensity" value="3.0"/>
    </emitter> -->

    <emitter type="directional">
        <vector name="direction" value="1, 1, 0"/>
        <rgb name="irradiance" value="3.0"/>
    </emitter>

    <!-- Shapes -->

    <shape type="obj" id="greenwall">
        <string name="filename" value="cbox_mesh/cbox_greenwall.obj"/>
        <!-- <ref id="green"/> -->
        <ref id="mirror"/>

    </shape>

    <shape type="obj" id="redwall">
        <string name="filename" value="cbox_mesh/cbox_redwall.obj"/>
        <bsdf type="diffuse">
            <ref name="reflectance" id="color_checkerboard"/>
        </bsdf>
        <!-- <ref id= "red"/> -->
    </shape>

</scene>
